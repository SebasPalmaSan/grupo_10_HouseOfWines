<%- include('./partials/head.ejs') %> 
<body>
<%- include('./partials/header.ejs') %>

<main>
    <picture class="carrousel">
        <img class="imagen-ofertas" src="/images/mwines6.png" alt="Carrousel de ofertas">
        
    </picture>


    <section id="main-top">

        <h1>Lista de productos</h1>
    <% if (locals.products) { %>
        <% if (products.legth > 0) { %>
            <ul>
                <% products.forEach(product => { %>
                    <li>
                    <a href="/products/<%= product.id %>">
                        
                            <article class="producto">
                                <% if (product.image) { %>
                                <img src="/uploads/<% product.image.url %>" alt="Imagen del producto">
                                <% } %>
                                <span><%= product.name %>Nombre Producto</span>
                                <span><%= product.description %> Descripcion</span>
                                <span><%= product.discount %>Descuento</span>
                                <span><%= product.oldPrice %>Precio Viejo</span>
                                <span><%= product.newPrice %>Precio Nuevo</span>

                                <form action= "/products/?m=DELETE" method="post">
                                <input type="hidden" name="id" value="<%= product.id %>">
                                <button type="submit"><i class="fa fa-trash"></i></button>
                                </form>
                            </article>
                        </a>
                    </li> 
                <% }) %>
            </ul>
         <% } else { %>
            <h2>No se encontraron productos</h2>
            <% } %>
        <% } else { %>
            <h2>No se encontraron productos</h2>
        <% } %>


    </section> 
       

    <picture class="carrousel">
        <img class="imagen-bodegas" src="/images/jameson-logo.jpg" alt="Carrousel de bodegas">
        
    </picture>

    <section id="main-bottom">

        <h1>Lista de productos</h1>
    <% if (locals.products) { %>
        <% if (products.legth > 0) { %>
            <ul>
                <% products.forEach(product => { %>
                    <li>
                    <a href="/products/<%= product.id %>">
                        
                            <article class="producto">
                                <% if (product.image) { %>
                                <img src="/uploads/<% product.image.url %>" alt="Imagen del producto">
                                <% } %>
                                <span><%= product.name %>Nombre Producto</span>
                                <span><%= product.description %> Descripcion</span>
                                <span><%= product.discount %>Descuento</span>
                                <span><%= product.oldPrice %>Precio Viejo</span>
                                <span><%= product.newPrice %>Precio Nuevo</span>

                                <form action= "/products/?m=DELETE" method="post">
                                <input type="hidden" name="id" value="<%= product.id %>">
                                <button type="submit"><i class="fa fa-trash"></i></button>
                                </form>
                            </article>
                        </a>
                    </li> 
                <% }) %>
            </ul>
         <% } else { %>
            <h2>No se encontraron productos</h2>
            <% } %>
        <% } else { %>
            <h2>No se encontraron productos</h2>
        <% } %>


    </section> 

    
</main>

<%- include('./partials/footer.ejs') %>
</body>
</html>