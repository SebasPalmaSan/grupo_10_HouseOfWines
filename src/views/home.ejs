<%- include('./partials/head.ejs') %> 
<body>
<%- include('./partials/header.ejs') %>

<main>
    <section class="carrouselBanners">
        <nav class="carrouselCaja">
            <li class="carrousel">
                <img class="imagen-ofertas" src="/images/tanqueray_banner.jpg" alt="Carrousel de ofertas" width="100%">
            </li>
            <li class="carrousel">
                <img class="imagen-ofertas" src="/images/bannerlicores-al-mayor.png" alt="Carrousel de ofertas" width="100%">
            </li>
        </nav>
    </section>  

    <h1 class="bienvenida">Â¡BIENVENIDO A NUESTRA TIENDA ONLINE!</h1>
	<div class="linea"></div>
    <h2 class="destacados">PRODUCTOS DESTACADOS</h2>
    <div class="linea"></div>
    <section id="main-top">

        
    <% if (locals.products) { %>
        <% if (products.length > 0) { %>
                <% products.forEach(product => { %>
                    
                            <article class="producto">
                              <a href="/products/detail/<%= product.id %>" class="caja">  
                                <% if (product.images) { %>
                                    <img src="/products/<%= product.image.url %>" alt="Imagen de <%= product.name %>" class="img-product">
                                <% } %>
                                <section class="texto">
                                    <h3 class="nombre-producto"><%= product.name %></h3>
                                    <p class="descrip-producto"><%= product.description %></p>
                                    <p class="descuento"> <%= product.discount %> % OFF</p>
                                    <p class="precio-ant"> $ <%= product.price %> </p>
                                    <p class="descrip-producto">Hasta 24 cuotas <i class="far fa-2x fa-credit-card service-icon"></i></p>
                                    
                                </section>
                                </a>
                            </article>
                    
                <% }) %>
         <% } else { %>
            <h2 class="destacados">No se encontraron productos</h2>
            <% } %>
        <% } else { %>
            <h2 class="destacados">No se encontraron productos</h2>
        <% } %>


    </section> 

    <section class="carrouselBanners">
        <nav class="carrouselCaja">
            <li class="carrousel">
                <img class="imagen-ofertas" src="/images/jameson-logo.jpg" alt="Carrousel de ofertas">
            </li>
            <li class="carrousel">
                <img class="imagen-ofertas" src="/images/blue_label_banner.jpg" alt="Carrousel de ofertas">
            </li>
        </nav>
    </section>  
</main>
    <%- include('./partials/footer.ejs') %>
    <script src="js/home.js"></script>
</body>
</html>