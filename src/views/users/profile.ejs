<%- include('../partials/head.ejs') %> 
<body>
<%- include('../partials/header.ejs') %>
<main>
    <link rel="stylesheet" href="/css/users/profile.css"/>
    <section>
        <h1 class="saludoBienvenida"> ¡Bienvenido a House of Wines <%=user.firstName%> ! </h1>
        <% if (user.avatar) { %>
            <figure>
                <img id="imgCentral"src="/avatars/<%=userLogged.avatar%> " alt="<%= user.firstName %> "class="avatar">
            </figure>
        
        <% } else { %>
            <figure>
                <img id="imgCentral"src="/avatars/default-avatar.png" alt="avatar generico" class="avatar">
            </figure>
            
         <% } %>

    </section>
    
    <section>
        <article class="datosProfile">
            <h2>Mis datos</h2>
            <h3> Nombre y Apellido: <%= user.firstName %> <%= user.lastName %></h3>
            <h3> Fecha de nacimiento: <%= user.birthdate %></h3>
            <h3> Teléfono: <%= user.phone %></h3>
            <h3> Dirección: <%= user.adress %></h3>
            <h3> Email: <%= user.email %></h3>
        </article>
    </section>
    
</main>

<%- include('../partials/footer.ejs') %>
</body>