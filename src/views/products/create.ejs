<%- include('../partials/head.ejs') %>
<body>
<%- include('../partials/header.ejs') %>

    
    <form action= "/products/create" method = "POST" enctype="multipart/form-data">
        
        <h1 class="title">Crear un producto</h1>
        
        <section class="contenedor">
            <label for="name">
            <input type="text" id="name" name="name" minlength="5" maxlength="25" placeholder="Nombre del producto" class="control inputs2" required>

            <label for="price"class="">
            <input type="number" id="price" name="price" min="0" placeholder="Precio de lista" class="control" required>
            </label>

            <label for="discount"class="">
            <input type="number" id="discount" name="discount" min="0" max="100" placeholder="Porcentaje de descuento" class="control" required>
            </label>

            <label for="category" class="">
            <select id="category" name="category" class="control" required>
                <option value="1">Vinos</option>
                <option value="2">Espumantes</option>
                <option value="3">Destilados</option>
                <option value="4">Whiskys</option>
                <option value="5">Accesorios</option>
            </select>
            </label>
            
            
            <!--<label for="description" class=""></label>-->
            <fieldset >
                <textarea id="description" name="description" rows="4" cols="30" minlength="20" class="control inputs2" placeholder="Descripción del Producto" required></textarea>
            </fieldset>
            <fieldset ><textarea id="review" name="review" rows="4" cols="30" placeholder="Reseña del Producto"></textarea></fieldset>
    
            <label for="file" class="control-formulario2"><input type="file" id="file" name="file" accept=".jpeg, .png, .gif, .jpg">
                <small id="errorFile"></small>
            </label>
            <br>
            <br>
            <fieldset><button type="submit">Guardar producto</button></fieldset>
            <br>
    </section>
    </form>
    <%- include('../partials/footer.ejs') %>
    <script src = "../js/create.js"></script>
</body>
</html>